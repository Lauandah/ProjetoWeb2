<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <title>Lista de Funcionários</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=K2D&display=swap');
      @import url('https://fonts.googleapis.com/css2?family=Nunito&display=swap');
  </style>
    <link rel="stylesheet" href="/stylesheets/style.list.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </head>
  <body class="body">
  
    <div class="container">
      <nav class="navbar navbar-light">

          <a class="col-2 navbar-brand" href="#">
            <img src="images/group.png" width="30%" alt="Logo">
          </a>

          <div id="h1">
            <h1 class="col-5">Funcionários</h1>
          </div>

          <form  method="GET" action="/funcionarios/search" class="col-3 row">

            
            <div  class="input-group mb-3">
              <input  type="text" class="form-control" placeholder="Buscar" aria-label="Recipient's username" aria-describedby="button-addon2">
              <div class="input-group-append">
                <button   class="btn btn-outline-secondary" type="button" id="button-addon2"><i class="bi bi-search-heart"></i></button>
              </div>
            </div>
        
            <!--
            <div class="search"  class="col-auto">
              <input class="search" type="search" name="nome" class="form-control" placeholder="Buscar"> 
              <div class="input-group-prepend">
                
              </div>
    <button id="heart" type="submit" class="col-auto"><i class="bi bi-search-heart"></i></button>
            </div>-->
          </form>

          

          <a   href="/funcionarios/form" class="col-1 add"><i id="add" class="bi bi-plus-circle"></i></a>
      </nav>

      <div class="list">
        <% if (locals.messages.success) { %>
          <div class="alert alert-success" role="alert">
            <%= locals.messages.success %> 
          </div>
        <% } %>

        <% if (locals.messages.error) { %>
          <div class="alert alert-danger" role="alert">
            <%= locals.messages.error %> 
          </div>
        <% } %>

        <div id="">
          <table class="table table-striped">
            <thead>
              <tr class="text">
                <th scope="col">Matrícula</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Data de nascimento</th>
                <th scope="col">CPF</th>
                <th scope="col">Cidade</th>
                <th scope="col">Tipo de Contrato</th>
                <th scope="col">Opções</th>
              </tr>
            </thead>
            <tbody>

              <% for(funcionario of funcionarios) { %>
              <tr class="text">
                <tr>
                  <th scope="row"><%= funcionario.id %> </th>
                  <td><%= funcionario.nome %> </td>
                  <td><%= funcionario.email %> </td>
                  <td><%= funcionario.data_nascimento %> </td>
                  <td><%= funcionario.cpf %> </td>
                  <td><%= funcionario.cidade %> </td>
                  <td><%= funcionario.tipo_contrato %> </td>
                  <td>
                  </div>
                  <div class="row">
                    <form class="col-auto" action="/funcionarios/delete" method="post">
                      <input type="hidden" name="id" value="<%= funcionario.id %>">
                      <button class="col-auto btn btn-outline-light" type="submit"><i class="bi bi-trash3"></i></button>
                    </form>

                      <a class="col-auto btn btn-outline-light" href="/funcionarios/form?id=<%= funcionario.id %>"><i class="bi bi-pencil-square"></i></a>
                    
                  </div>
                  
                </td>
              </tr>
            <% } %>

          </tbody>
        </table>
      </div>

    </div>



  </body>
</html>
